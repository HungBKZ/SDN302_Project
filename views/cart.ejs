      border-radius:6px;
      cursor:pointer;
      font-size:18px;
      display:flex;
      align-items:center;
      justify-content:center;
      color:#374151;
    }
    .quantity-btn:hover {
      background:#f9fafb;
      border-color:#3b82f6;
    }
    .quantity-btn:disabled {
      opacity:0.5;
      cursor:not-allowed;
    }
    .quantity-value {
      font-size:16px;
      font-weight:600;
      min-width:30px;
      text-align:center;
    }
    .item-actions {
      display:flex;
      align-items:center;
      gap:8px;
    }
    .btn-remove {
      padding:8px 16px;
      background:#fee2e2;
      color:#991b1b;
      border:none;
      border-radius:6px;
      cursor:pointer;
      font-size:14px;
      font-weight:600;
    }
    .btn-remove:hover {
      background:#fecaca;
    }
    .cart-summary {
      background:#fff;
      border-radius:8px;
      box-shadow:0 2px 8px rgba(59,130,246,0.1);
      padding:20px;
      height:fit-content;
      position:sticky;
      top:80px;
    }
    .summary-title {
      font-size:20px;
      font-weight:600;
      color:#1f2937;
      margin-bottom:16px;
      padding-bottom:16px;
      border-bottom:1px solid #e5e7eb;
    }
    .summary-row {
      display:flex;
      justify-content:space-between;
      margin-bottom:12px;
      font-size:15px;
    }
    .summary-row.total {
      font-size:20px;
      font-weight:700;
      color:#3b82f6;
      padding-top:16px;
      border-top:2px solid #e5e7eb;
      margin-top:16px;
    }
    .btn-checkout {
      width:100%;
      padding:14px;
      background:#3b82f6;
      color:#fff;
      border:none;
      border-radius:6px;
      cursor:pointer;
      font-size:16px;
      font-weight:600;
      margin-top:16px;
    }
    .btn-checkout:hover {
      background:#2563eb;
    }
    .btn-checkout:disabled {
      opacity:0.5;
      cursor:not-allowed;
    }
    .btn-continue {
      width:100%;
      padding:12px;
      background:#f3f4f6;
      color:#374151;
      border:none;
      border-radius:6px;
      cursor:pointer;
      font-size:14px;
      font-weight:600;
      margin-top:12px;
    }
    .btn-continue:hover {
      background:#e5e7eb;
    }
    .empty-cart {
      text-align:center;
      padding:60px 20px;
      background:#fff;
      border-radius:8px;
      box-shadow:0 2px 8px rgba(59,130,246,0.1);
    }
    .empty-cart h3 {
      font-size:20px;
      color:#6b7280;
      margin-bottom:16px;
    }
    .empty-cart p {
      color:#9ca3af;
      margin-bottom:24px;
    }
    .empty-cart a {
      display:inline-block;
      padding:12px 24px;
      background:#3b82f6;
      color:#fff;
      text-decoration:none;
      border-radius:6px;
      font-weight:600;
    }
    .empty-cart a:hover {
      background:#2563eb;
    }
    .alert {
      padding:12px 16px;
      border-radius:6px;
      margin-bottom:20px;
      font-size:14px;
    }
    .alert.error {
      background:#fee;
      color:#b91c1c;
      border:1px solid #fecaca;
    }
    .alert.success {
      background:#f0fdf4;
      color:#166534;
      border:1px solid #bbf7d0;
    }
    @media (max-width: 768px) {
      .cart-content {
        grid-template-columns:1fr;
      }
      .cart-summary {
        position:static;
      }
      .cart-item {
        flex-direction:column;
      }
      .item-image {
        width:100%;
        height:200px;
      }
    }
  </style>
</head>
<body>
  <div class="navbar">
    <h1>üõí Gi·ªè h√†ng</h1>
    <div class="user-info">
      <a href="/profile" class="user-link" id="userName">üë§ ƒêang t·∫£i...</a>
      <a href="/menu" class="btn-link">‚Üê Quay l·∫°i menu</a>
      <button onclick="logout()">ƒêƒÉng xu·∫•t</button>
    </div>
  </div>

  <div class="container">
    <div id="alertBox"></div>

    <div class="cart-header">
      <h2>Gi·ªè h√†ng c·ªßa b·∫°n</h2>
      <p>Xem l·∫°i c√°c m√≥n ƒë√£ ch·ªçn tr∆∞·ªõc khi ƒë·∫∑t h√†ng</p>
    </div>

    <div id="cartContent">
      <div class="empty-cart">
        <h3>üõí Gi·ªè h√†ng tr·ªëng</h3>
        <p>B·∫°n ch∆∞a c√≥ m√≥n ƒÉn n√†o trong gi·ªè h√†ng</p>
        <a href="/menu">Kh√°m ph√° menu</a>
      </div>
    </div>
  </div>

  <script>
    // Load user info
    const user = JSON.parse(localStorage.getItem('user') || '{}');
    if (user.Name) {
      document.getElementById('userName').textContent = user.Name;
    }

    // Check authentication
    const token = localStorage.getItem('token');
    if (!token) {
      window.location.href = '/login';
    }

    // Logout
    function logout() {
      localStorage.removeItem('token');
      localStorage.removeItem('user');
      localStorage.removeItem('cart');
      window.location.href = '/login';
    }

    // Show alert
    function showAlert(message, type) {
      const alertBox = document.getElementById('alertBox');
      alertBox.innerHTML = `<div class="alert ${type}">${message}</div>`;
      setTimeout(() => { alertBox.innerHTML = ''; }, 3000);
    }

    // Format price
    function formatPrice(price) {
      return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price);
    }

    // Get cart from localStorage
    function getCart() {
      const cart = localStorage.getItem('cart');
      return cart ? JSON.parse(cart) : [];
    }

    // Save cart to localStorage
    function saveCart(cart) {
      localStorage.setItem('cart', JSON.stringify(cart));
    }

    // Update quantity
    function updateQuantity(dishId, change) {
      const cart = getCart();
      const item = cart.find(i => i._id === dishId);
      
      if (item) {
        item.quantity += change;
        
        if (item.quantity <= 0) {
          removeFromCart(dishId);
          return;
        }
        
        saveCart(cart);
        displayCart();
      }
    }

    // Remove from cart
    function removeFromCart(dishId) {
      let cart = getCart();
      cart = cart.filter(i => i._id !== dishId);
      saveCart(cart);
      displayCart();
      showAlert('‚úÖ ƒê√£ x√≥a m√≥n kh·ªèi gi·ªè h√†ng', 'success');
    }

    // Display cart
    function displayCart() {
      const cart = getCart();
      const container = document.getElementById('cartContent');

      if (cart.length === 0) {
        container.innerHTML = `
          <div class="empty-cart">
            <h3>üõí Gi·ªè h√†ng tr·ªëng</h3>
            <p>B·∫°n ch∆∞a c√≥ m√≥n ƒÉn n√†o trong gi·ªè h√†ng</p>
            <a href="/menu">Kh√°m ph√° menu</a>
          </div>
        `;
        return;
      }

      // Calculate totals
      const subtotal = cart.reduce((sum, item) => sum + (item.DishPrice * item.quantity), 0);
      const tax = subtotal * 0.1; // 10% VAT
      const total = subtotal + tax;

      container.innerHTML = `
        <div class="cart-content">
          <div class="cart-items">
            ${cart.map(item => `
              <div class="cart-item">
                <img src="${item.DishImage || '/images/default-dish.jpg'}" 
                     alt="${item.DishName}" 
                     class="item-image"
                     onerror="this.src='/images/default-dish.jpg'">
                <div class="item-details">
                  <div class="item-name">${item.DishName}</div>
                  <span class="item-type">${item.DishType === 'Food' ? 'ƒê·ªì ƒÉn' : 'ƒê·ªì u·ªëng'}</span>
                  <div class="item-price">${formatPrice(item.DishPrice)}</div>
                  <div class="quantity-control">
                    <button class="quantity-btn" onclick="updateQuantity('${item._id}', -1)">‚àí</button>
                    <span class="quantity-value">${item.quantity}</span>
                    <button class="quantity-btn" onclick="updateQuantity('${item._id}', 1)">+</button>
                    <span style="margin-left:16px;color:#6b7280;">T·ªïng: ${formatPrice(item.DishPrice * item.quantity)}</span>
                  </div>
                </div>
                <div class="item-actions">
                  <button class="btn-remove" onclick="removeFromCart('${item._id}')">üóëÔ∏è X√≥a</button>
                </div>
              </div>
            `).join('')}
          </div>

          <div class="cart-summary">
            <div class="summary-title">T√≥m t·∫Øt ƒë∆°n h√†ng</div>
            <div class="summary-row">
              <span>T·∫°m t√≠nh:</span>
              <span>${formatPrice(subtotal)}</span>
            </div>
            <div class="summary-row">
              <span>VAT (10%):</span>
              <span>${formatPrice(tax)}</span>
            </div>
            <div class="summary-row total">
              <span>T·ªïng c·ªông:</span>
              <span>${formatPrice(total)}</span>
            </div>
            <button class="btn-checkout" onclick="checkout()">
              ƒê·∫∑t h√†ng (${cart.length} m√≥n)
            </button>
            <button class="btn-continue" onclick="window.location.href='/menu'">
              ‚Üê Ti·∫øp t·ª•c mua h√†ng
            </button>
          </div>
        </div>
      `;
    }

    // Checkout
    function checkout() {
      const cart = getCart();
      if (cart.length === 0) {
        showAlert('‚ùå Gi·ªè h√†ng tr·ªëng!', 'error');
        return;
      }

      // TODO: Implement order API
      showAlert('‚úÖ ƒê·∫∑t h√†ng th√†nh c√¥ng! (Ch·ª©c nƒÉng ƒëang ph√°t tri·ªÉn)', 'success');
      
      // Clear cart after successful order
      setTimeout(() => {
        localStorage.removeItem('cart');
        window.location.href = '/menu';
      }, 2000);
    }

    // Initialize
    displayCart();
  </script>
</body>
</html>
