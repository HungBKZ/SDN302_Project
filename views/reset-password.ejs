<!doctype html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Quên mật khẩu</title>
  <style>
    body { font-family: Arial, Helvetica, sans-serif; background:#f5f7fb; margin:0; }
    .container { max-width:420px; margin:6vh auto; background:#fff; padding:24px; box-shadow:0 6px 24px rgba(0,0,0,0.08); border-radius:8px; }
    h1 { margin:0 0 12px 0; font-size:20px; color:#222; }
    .desc { font-size:14px; color:#555; margin-bottom:18px; line-height:1.5 }
    label { display:block; font-size:13px; margin-bottom:6px; color:#333 }
    input[type="email"] { width:100%; padding:10px 12px; font-size:14px; border:1px solid #d9dfea; border-radius:6px; box-sizing:border-box; }
    .row { margin-bottom:12px }
    .actions { display:flex; align-items:center; justify-content:space-between; gap:12px }
    button { background:#2563eb; color:#fff; border:none; padding:10px 14px; border-radius:6px; font-weight:600; cursor:pointer; font-size:14px }
    button[disabled] { opacity:0.6; cursor:not-allowed }
    .link { color:#2563eb; text-decoration:none; font-size:13px }
    .msg { padding:10px 12px; border-radius:6px; margin-bottom:12px; font-size:14px }
    .msg.error { background:#fff1f0; color:#9b1c1c; border:1px solid #ffd3d3 }
    .msg.success { background:#f0fdf4; color:#166534; border:1px solid #bbf7d0 }
  </style>
</head>
<body>
  <div class="container">
    <h1>Quên mật khẩu</h1>
    <p class="desc">Nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu.</p>

    <div id="message" aria-live="polite"></div>

    <form id="resetForm">
      <div class="row">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" placeholder="example@gmail.com" required />
      </div>

      <div class="row actions">
        <button id="submitBtn" type="submit">Gửi yêu cầu</button>
        <a class="link" href="/login">Quay lại đăng nhập</a>
      </div>
    </form>
  </div>

  <script>
    (function(){
      const form = document.getElementById('resetForm');
      const msgEl = document.getElementById('message');
      const submitBtn = document.getElementById('submitBtn');

      function showMessage(text, type){
        msgEl.innerHTML = '';
        if(!text) return;
        const div = document.createElement('div');
        div.className = 'msg ' + (type === 'error' ? 'error' : 'success');
        div.textContent = text;
        msgEl.appendChild(div);
      }

      form.addEventListener('submit', async function(e){
        e.preventDefault();
        submitBtn.disabled = true;
        showMessage('Đang xử lý...', 'success');

        const payload = {
          email: form.email.value.trim()
        };

        try{
          // TODO: Replace with your actual password reset endpoint
          // For now, assuming POST /api/account/forgot-password
          const res = await fetch('/api/account/forgot-password', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });

          const data = await res.json();
          if(!res.ok || !data.success){
            showMessage(data.message || 'Không thể gửi yêu cầu', 'error');
            submitBtn.disabled = false;
            return;
          }

          showMessage('Đã gửi hướng dẫn đến email của bạn. Vui lòng kiểm tra hộp thư.', 'success');
          form.reset();
          submitBtn.disabled = false;
        } catch(err){
          showMessage('Lỗi kết nối. Vui lòng thử lại.', 'error');
          submitBtn.disabled = false;
        }
      });
    })();
  </script>
</body>
</html>
