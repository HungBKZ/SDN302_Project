      background:rgba(255,255,255,0.15);
      border-radius:6px;
    }
    .navbar .user-info a.user-link {
      padding:8px 16px;
      background:rgba(255,255,255,0.15);
      border-radius:6px;
      color:#fff;
      text-decoration:none;
      cursor:pointer;
      transition: background 0.3s;
    }
    .navbar .user-info a.user-link:hover {
      background:rgba(255,255,255,0.25);
    }
    .navbar button, .navbar .btn-link {
      padding:8px 16px;
      background:#fff;
      color:#3b82f6;
      border:none;
      border-radius:6px;
      cursor:pointer;
      font-size:14px;
      font-weight:600;
      text-decoration:none;
      display:inline-block;
    }
    .navbar button:hover, .navbar .btn-link:hover {
